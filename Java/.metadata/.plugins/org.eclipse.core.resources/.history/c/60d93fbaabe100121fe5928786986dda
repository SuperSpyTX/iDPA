package se.krau.asciiani;

public class Renderer {
	
	public static void testRender() {
		// 20x42 (18x40)
		int rows = 20, width = 42;
		for (int row = 0; row < rows; row++) {
			boolean border = false;
			if (row == 0 || row == (rows - 1)) {
				border = true;
			}
			for (int column = 0; column < width; column++) {
				char dot = '.';
				if (border || column == 0 || column == (width - 1)) {
					dot = '*';
				}
				System.out.print(dot);
				if (column == (width - 1)) {
					System.out.print('\n');
				}
			}
		}
	}
}
